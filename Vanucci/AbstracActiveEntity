namespace OOP21_boxhead_csharp.Vanucci
{
    public abstract class AbstractActiveEntity : IActiveEntity
    {
        public Point2D Speed { get; set; }
        public Direction Direction { get; set; } 

        public AbstractActiveEntity(Point2D speed; Direction direction, Point2D position, EntityType entityType)
        {
            base(position,entityType);
            Speed=speed;
            Direction=direction;
        }

        public void Update()
        {
            Position=Position
        }

    }
}